---
// src/components/misc/HeroPostImage.astro
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;

// Hero images should be either:
// 1. External URLs (https://...)
// 2. Public directory images (/hero-image.jpg)
// 3. CDN URLs
const imagePath = src;
---

<div class={`hero-post-image-wrapper ${className || ''}`}>
  <img src={imagePath} alt={alt} class="hero-post-image" />
</div>

<style>
  .hero-post-image-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-post-image {
    width: 70%;
    height: 70%;
    object-fit: contain;
    border-radius: 8px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Reset for inline images in posts */
  :global(#post-cover) .hero-post-image {
    position: static;
    width: 100%;
    height: auto;
    transform: none;
    top: auto;
    left: auto;
  }
</style>